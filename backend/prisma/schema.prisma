generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  subscriber
  coach
  admin
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  password      String
  role          UserRole @default(subscriber)
  phase_current String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Menu {
  id          String   @id @default(uuid())
  title       String
  description String?
  phase       String
  day         Int?
  createdAt   DateTime @default(now())
}

model Recipe {
  id        String   @id @default(uuid())
  title     String
  ingredients Json
  steps     Json
  phase     String?
  createdAt DateTime @default(now())
}
