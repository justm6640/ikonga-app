generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  password      String
  role          UserRole @default(subscriber)
  phase_current String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  photos        BeautyPhoto[]
  sentMessages  CoachMessage[] @relation("CoachMessagesFrom")
  receivedMessages CoachMessage[] @relation("CoachMessagesTo")
  progressEntries Progress[]
  userHabits      UserHabit[]
  moodLogs        MoodLog[]
}

enum UserRole {
  subscriber
  coach
  admin
}

model BeautyRoutine {
  id          String   @id @default(uuid())
  title       String
  description String
  phase       String
  createdAt   DateTime @default(now())
}

model BeautyPhoto {
  id       String   @id @default(uuid())
  userId   String
  imageUrl String
  takenAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model CoachMessage {
  id         String   @id @default(uuid())
  fromUserId String
  toUserId   String
  content    String
  createdAt  DateTime @default(now())

  fromUser User @relation("CoachMessagesFrom", fields: [fromUserId], references: [id])
  toUser   User @relation("CoachMessagesTo", fields: [toUserId], references: [id])
}

model Progress {
  id        String   @id @default(uuid())
  userId    String
  weight    Float?
  notes     String?
  phase     String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model Habit {
  id          String      @id @default(uuid())
  name        String
  description String?

  userHabits UserHabit[]
}

model UserHabit {
  id      String   @id @default(uuid())
  userId  String
  habitId String
  date    DateTime
  done    Boolean  @default(false)

  user  User  @relation(fields: [userId], references: [id])
  habit Habit @relation(fields: [habitId], references: [id])

  @@unique([userId, habitId, date])
}

model MoodLog {
  id        String   @id @default(uuid())
  userId    String
  mood      String
  note      String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
model User {
  id           String       @id @default(uuid())
  email        String       @unique
  password     String
  role         UserRole     @default(subscriber)
  // phase actuelle de l'abonn√© (DETOX, EQUILIBRE, etc.)
  phaseCurrent String       @default("DETOX")
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  // relations
  fitnessLogs  FitnessLog[]
  userHabits   UserHabit[]
  moodLogs     MoodLog[]
}

model Menu {
  id          String   @id @default(uuid())
  title       String
  description String?
  phase       String
  day         Int?
  createdAt   DateTime @default(now())
}

model Recipe {
  id          String   @id @default(uuid())
  title       String
  ingredients Json
  steps       Json
  phase       String?
  createdAt   DateTime @default(now())
}

// ---------------------
// IKOFITNESS
// ---------------------
model Workout {
  id              String       @id @default(uuid())
  title           String
  description     String?
  phase           String
  videoUrl        String?
  durationMinutes Int?
  createdAt       DateTime     @default(now())

  logs            FitnessLog[]
}

model FitnessLog {
  id        String   @id @default(uuid())
  userId    String
  workoutId String
  doneAt    DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  workout Workout @relation(fields: [workoutId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([workoutId])
}

// ---------------------
// IKOWELLNESS
// ---------------------
model Habit {
  id          String      @id @default(uuid())
  name        String
  description String?

  userHabits  UserHabit[]
}

model UserHabit {
  id      String   @id @default(uuid())
  userId  String
  habitId String
  date    DateTime
  done    Boolean  @default(false)

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  habit Habit @relation(fields: [habitId], references: [id], onDelete: Cascade)

  @@unique([userId, habitId, date])
  @@index([habitId])
  @@index([userId])
}

model MoodLog {
  id        String   @id @default(uuid())
  userId    String
  mood      String
  note      String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}
