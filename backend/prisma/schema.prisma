generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  password      String
  role          UserRole @default(subscriber)
  phase_current String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  photos        BeautyPhoto[]
}

enum UserRole {
  subscriber
  coach
  admin
}

model BeautyRoutine {
  id          String   @id @default(uuid())
  title       String
  description String
  phase       String
  createdAt   DateTime @default(now())
}

model BeautyPhoto {
  id       String   @id @default(uuid())
  userId   String
  imageUrl String
  takenAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}
